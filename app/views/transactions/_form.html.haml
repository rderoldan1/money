= form_for @transaction do |f|
  -if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.text_field :date
  .field
    = f.label :check_number
    = f.text_field :check_number
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :debit
    = f.text_field :debit
  .field
    = f.label :credit
    = f.text_field :credit
  .actions
    = f.submit 'Save'
